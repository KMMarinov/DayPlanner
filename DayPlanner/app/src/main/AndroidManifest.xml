<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kalinmarinov.dayplanner">

    <application
            android:name=".DayPlannerApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".views.EventActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.CreateEditEventActivity">
        </activity>
        <activity android:name=".views.ShowEventActivity">
        </activity>
        <activity android:name=".views.EventsCalendarActivity">
        </activity>

        <service android:name=".scheduling.android.services.NotificationJobService"
                 android:permission="android.permission.BIND_JOB_SERVICE"/>
    </application>

</manifest>